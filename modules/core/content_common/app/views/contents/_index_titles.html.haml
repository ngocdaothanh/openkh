- # Inputs:
- #   contents: may contain different types of contents
- #   options: params for paginating_links

- div_id = "content_container_titles#{contents.object_id}"

%div{:id => div_id}
  %ul
    - contents.each do |n|
      - type        = n.class.to_s
      - down        = type.downcase
      - down_plural = down.pluralize
      - partial     = "#{down_plural}/index_title"
      %li= render_if_exists(partial, :content => n) { link_to(n.title, content_show_path(n)) }

  %p.pager= paginating_links(contents, {:window_size => 5, :params => options}, :onclick => "return OpenKH.showPage('#{div_id}', this.href)")
