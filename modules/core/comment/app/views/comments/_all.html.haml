-# Inputs:
-#   object
-#   scroll
-#   comments

#comment_container
  #comment_list
    - comments.each do |c|
      ~ render('comments/comment', :comment => c)

  %p.pager= will_paginate(comments, :params => {:controller => 'comments', :action => 'index', :model_type => object.class.to_s, :model_id => object.id}, :renderer => AjaxLinkRenderer.new('comment_container'))

= render('comments/form', :object => object)
= html_upload_list_and_upload(object)

= javascript_include_tag('comment')
